<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.UserProfile.UserProfileViewHistoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_top_bar"
            android:id="@+id/fragment_user_history_top_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_user_history_info_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_user_history_info_layout"
            app:layout_constraintTop_toBottomOf="@id/fragment_user_history_top_bar"
            app:layout_constraintBottom_toTopOf="@id/fragment_user_history_tab_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:id="@+id/fragment_user_history_profile_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fragment_user_history_post_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/fragment_user_history_user_image"
                    android:src="@drawable/image_test"
                    android:background="@drawable/button_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/fragment_user_history_user_nick"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/fragment_user_history_user_nick"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/fragment_user_history_user_email"
                    app:layout_constraintStart_toEndOf="@id/fragment_user_history_user_image"
                    app:layout_constraintEnd_toStartOf="@id/fragment_user_history_profile_setting"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:id="@+id/fragment_user_history_user_email"
                    app:layout_constraintTop_toBottomOf="@id/fragment_user_history_user_nick"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/fragment_user_history_user_image"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/fragment_user_history_profile_setting"
                    android:foreground="@drawable/image_settings"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/fragment_user_history_user_email"
                    app:layout_constraintStart_toEndOf="@id/fragment_user_history_user_nick"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_user_history_post_layout"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/fragment_user_history_profile_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fragment_user_history_review_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/fragment_user_history_post_text"
                    android:text="@string/post"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/fragment_user_history_post"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/fragment_user_history_post"
                    android:text="@string/test_0"
                    app:layout_constraintTop_toBottomOf="@id/fragment_user_history_post_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_user_history_review_layout"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/fragment_user_history_profile_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/fragment_user_history_post_layout"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/fragment_user_history_review_text"
                    android:text="@string/review"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/fragment_user_history_review"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/fragment_user_history_review"
                    android:text="@string/test_0"
                    app:layout_constraintTop_toBottomOf="@id/fragment_user_history_review_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_user_history_tab_layout"
            app:layout_constraintTop_toBottomOf="@id/fragment_user_history_info_layout"
            app:layout_constraintBottom_toTopOf="@id/fragment_user_history_view_pager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/fragment_user_history_view_pager"
            app:layout_constraintTop_toBottomOf="@id/fragment_user_history_tab_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>