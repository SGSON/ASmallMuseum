<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ArtView.ArtViewActivity">

    <include layout="@layout/layout_top_bar"
        android:id="@+id/top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/art_view"
        android:elevation="5dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/art_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/art_scroll_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/art_image_pager"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/art_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/art_button_pager"
            android:background="@drawable/button_expand"
            android:foreground="@drawable/ic_baseline_zoom_in_24"
            android:backgroundTint="@null"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintTop_toTopOf="@id/art_image_pager"
            app:layout_constraintBottom_toBottomOf="@id/art_image_pager"
            app:layout_constraintStart_toStartOf="@id/art_image_pager"
            app:layout_constraintEnd_toEndOf="@id/art_image_pager"/>
        <TextView
            android:id="@+id/art_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="@string/test3"
            android:gravity="center|start"
            app:layout_constraintTop_toBottomOf="@id/art_image_pager"
            app:layout_constraintBottom_toTopOf="@id/art_author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/art_author"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:gravity="center|start"
            android:text="@string/test1"
            app:layout_constraintTop_toBottomOf="@id/art_title"
            app:layout_constraintBottom_toTopOf="@id/art_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/art_desc"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:gravity="center|start"
            android:text="@string/test3"
            app:layout_constraintTop_toBottomOf="@id/art_author"
            app:layout_constraintBottom_toTopOf="@id/art_rating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <RatingBar
            android:id="@+id/art_rating"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:isIndicator="true"
            app:layout_constraintTop_toBottomOf="@id/art_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/art_scroll_view"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/art_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include layout="@layout/layout_quick_menu"
        android:id="@+id/quick_menu_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include layout="@layout/layout_large_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/art_large_view"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>