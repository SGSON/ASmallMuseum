<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ArtUpload.ArtUploadPageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/upload_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/upload_close_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/upload_edit"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/upload_edit"
            android:text="@string/up_test_title"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/upload_close_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/upload_post"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/upload_post"
            android:text="@string/up_post"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/upload_edit"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/upload_title"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:hint="@string/up_title"
        app:layout_constraintTop_toBottomOf="@id/upload_top_bar"
        app:layout_constraintBottom_toTopOf="@id/upload_category_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/upload_type_text"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/up_category"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/upload_title"
        app:layout_constraintBottom_toTopOf="@id/upload_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/upload_category_spinner"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/upload_category_spinner"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/upload_title"
        app:layout_constraintBottom_toTopOf="@id/upload_description"
        app:layout_constraintStart_toEndOf="@id/upload_type_text"
        app:layout_constraintEnd_toStartOf="@id/upload_genre_text"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/upload_genre_text"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/up_type"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/upload_title"
        app:layout_constraintBottom_toTopOf="@id/upload_description"
        app:layout_constraintStart_toEndOf="@id/upload_category_spinner"
        app:layout_constraintEnd_toStartOf="@id/upload_type_spinner"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/upload_type_spinner"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/upload_title"
        app:layout_constraintBottom_toTopOf="@id/upload_description"
        app:layout_constraintStart_toEndOf="@id/upload_genre_text"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/upload_description"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:hint="@string/up_desc"
        android:gravity="top|start"
        android:background="@null"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/upload_image_layout"
        app:layout_constraintTop_toBottomOf="@id/upload_category_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_image_layout"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/upload_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/upload_images"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/upload_image_add"/>

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/upload_image_add"
            android:foreground="@drawable/add"

            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/upload_images"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>