<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.General.MainMenuProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/fragment_main_menu_profile_text"
            android:text="@string/welcome_test"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/fragment_main_menu_profile_view_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fragment_main_menu_profile_view_profile"
            app:layout_constraintTop_toBottomOf="@id/fragment_main_menu_profile_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fragment_main_menu_profile_view_history">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/fragment_main_menu_profile_view_profile_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fragment_main_menu_profile_view_profile_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_main_menu_profile_view_profile_text"
                android:text="@string/profile_profile"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/fragment_main_menu_profile_view_profile_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fragment_main_menu_profile_view_history"
            app:layout_constraintTop_toBottomOf="@id/fragment_main_menu_profile_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/fragment_main_menu_profile_view_profile"
            app:layout_constraintEnd_toStartOf="@id/fragment_main_menu_profile_support">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/fragment_main_menu_profile_view_history_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fragment_main_menu_profile_view_history_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_main_menu_profile_view_history_text"
                android:text="@string/profile_history"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/fragment_main_menu_profile_view_history_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fragment_main_menu_profile_support"
            app:layout_constraintTop_toBottomOf="@id/fragment_main_menu_profile_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/fragment_main_menu_profile_view_history"
            app:layout_constraintEnd_toStartOf="@id/fragment_main_menu_profile_sign_out">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/fragment_main_menu_profile_support_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fragment_main_menu_profile_support_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_main_menu_profile_support_text"
                android:text="@string/main_menu_support"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/fragment_main_menu_profile_support_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fragment_main_menu_profile_sign_out"
            app:layout_constraintTop_toBottomOf="@id/fragment_main_menu_profile_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/fragment_main_menu_profile_support"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/fragment_main_menu_profile_sign_out_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fragment_main_menu_profile_sign_out_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_main_menu_profile_sign_out_text"
                android:text="@string/profile_sign_out"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/fragment_main_menu_profile_sign_out_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>