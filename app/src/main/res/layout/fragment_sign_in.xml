<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SignIn.SignInFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/fragment_sign_in_top_bar"
            layout="@layout/asm_action_bar_view"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_in_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_sign_in_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_in_or"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_in_top_bar">

            <EditText
                android:id="@+id/fragment_sign_in_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/id"
                android:inputType="textEmailAddress"
                app:layout_constraintBottom_toTopOf="@id/fragment_sign_in_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/fragment_sign_in_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textWebPassword"
                app:layout_constraintBottom_toTopOf="@id/fragment_sign_in_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_sign_in_email" />

            <Button
                android:id="@+id/fragment_sign_in_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_sign_in_password" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/fragment_sign_in_or"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="@string/or"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_in_sign_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_in_layout" />

        <xyz.asmallmuseum.android.customview.SnsLoginButtonView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/fragment_sign_in_sign_up"
            app:sns_type="email"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_in_google"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_in_or"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <xyz.asmallmuseum.android.customview.SnsLoginButtonView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/fragment_sign_in_google"
            app:sns_type="google"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_in_sign_up"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_in_naver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <xyz.asmallmuseum.android.customview.SnsLoginButtonView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/fragment_sign_in_naver"
            app:sns_type="naver"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_in_google"
            app:layout_constraintBottom_toTopOf="@id/fragment_sign_in_kakao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <xyz.asmallmuseum.android.customview.SnsLoginButtonView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/fragment_sign_in_kakao"
            app:sns_type="kakao"
            app:layout_constraintTop_toBottomOf="@id/fragment_sign_in_naver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>